{% extends 'base.html.twig' %}

{% block title %}Catégorie {{ category }}{% endblock %}

{% block body %}
    <div class="media">

        <div class="media-body">
    {% for program in programs %}
            <h1 class="mt-0">{{ loop.index }} / {{ program.title }}</h1>
            <p>{{ program.summary }}</p>
            <a href="{{ path("program_show", { id: program.id }) }}">Voir la fiche</a>
        </div>
    {% endfor %}
    </div>

    <a href="{{ path('category_index') }}">
        Retour à la liste des catégories
    </a>
{% endblock %}
